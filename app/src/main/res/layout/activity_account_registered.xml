<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_2"
    tools:context=".AccountRegistered">

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:src="@drawable/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"/>
    <TextView
        android:id="@+id/detailsTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Details"
        android:fontFamily="@font/poppinssb"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_below="@+id/image_1"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/text_1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Full Name: "
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsreg"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/detailsTxtView"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/text_2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Email/Phone: "
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsreg"
        android:textSize="16sp"
        android:layout_below="@+id/text_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/text_3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsreg"
        android:textSize="16sp"
        android:layout_below="@+id/text_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btn1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/poppinsb"
        android:text="Continue"
        android:layout_marginTop="50dp"
        android:layout_below="@id/text_3"/>

</RelativeLayout>