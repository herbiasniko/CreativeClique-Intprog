<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signbg"
    tools:context=".Signin">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:src="@drawable/cclogof"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CreativeClique."
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/poppinssb"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"/>

    <EditText
        android:id="@+id/editxt_1"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:textSize="16sp"
        android:fontFamily="@font/poppinsreg"
        android:textColor="@color/white"
        android:textColorHint="@color/lightgrey"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text_1"/>

    <EditText
        android:id="@+id/editxt_2"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:fontFamily="@font/poppinsreg"
        android:textColorHint="@color/lightgrey"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editxt_1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editxt_2"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/LL1"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="180dp"
            android:fontFamily="@font/poppinssb"
            android:text="Sign In"
            android:textColor="@color/lightgrey"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signinupin"
            android:background="@android:color/transparent"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsb"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/LL1"
        android:layout_centerVertical="true"
        android:layout_marginTop="70dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/text_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/midgrey"
                android:fontFamily="@font/poppinssb"
                android:linksClickable="true"
                android:layout_below="@id/btn1"
                android:layout_marginRight="110dp"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:src="@drawable/line"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:fontFamily="@font/poppinssb"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/midgrey"
                android:linksClickable="true"
                android:layout_below="@id/LL1" />

            <ImageView
                android:layout_width="142dp"
                android:layout_height="1dp"
                android:src="@drawable/line"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>